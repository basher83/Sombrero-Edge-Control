{
  // Markdownlint-cli2 configuration for Sombrero Edge Control
  "config": {
    // Enable all rules by default
    "default": true,

    // Disable overly strict line length for documentation
    "MD013": {
      "line_length": 120,
      "heading_line_length": 120,
      "code_block_line_length": 120,
      "code_blocks": false,
      "tables": false,
      "headings": true,
      "strict": false,
      "stern": false
    },

    // Allow badges at the start of README
    "MD041": false,

    // Allow duplicate headings in different sections
    "MD024": {
      "siblings_only": true
    },

    // Configure list numbering style
    "MD029": {
      "style": "one"
    },

    // Allow inline HTML for badges and special formatting
    "MD033": {
      "allowed_elements": ["img", "br", "details", "summary", "ID", "a"]
    }
  },

  // Ignore certain paths
  "ignores": [
    "node_modules",
    ".git",
    ".claude",
    ".cursor/**",
    ".venv/**",
    "kics-results/**",
    "megalinter-reports/**",
    "**/.terraform/**",
    // Exclude terraform-docs generated README files
    "infrastructure/README.md",
    "infrastructure/environments/README.md",
    "infrastructure/environments/production/README.md",
    "infrastructure/modules/README.md",
    "infrastructure/modules/vm/README.md",
    "examples/**",
    "thoughts/**",
    "docs/decisions/**",
    "docs/ai_docs/**",
    "docs/planning/**",
    "deployments/**",
    "docs/project/tasks/template.md",
    "ansible_collections/basher83/automation_server/.ansible/**"
  ],

  // Disable banner and progress for CI environments
  "noBanner": false,
  "noProgress": false
}

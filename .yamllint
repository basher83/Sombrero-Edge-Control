# YAML Linting Configuration for Sombrero Edge Control
# Works in conjunction with .editorconfig for formatting
extends: default

rules:
  # Line length - defer to .editorconfig (120 chars for YAML)
  line-length:
    max: 120
    level: warning
    allow-non-breakable-words: true
    allow-non-breakable-inline-mappings: true

  # Document start is optional for config files
  document-start: disable

  # Comments - relaxed spacing
  comments:
    min-spaces-from-content: 1
    require-starting-space: true

  # Truthy values - allow 'on' for GitHub Actions
  truthy:
    allowed-values: ['true', 'false', 'on', 'off']
    check-keys: false

  # Indentation - defer to .editorconfig (2 spaces)
  indentation:
    spaces: 2
    indent-sequences: consistent

  # Trailing spaces - handled by .editorconfig
  trailing-spaces: enable

  # New lines - handled by .editorconfig
  new-line-at-end-of-file: enable

  # Empty lines
  empty-lines:
    max: 2
    max-start: 0
    max-end: 0

# Ignore generated/vendor directories
ignore: |
  .terraform/
  .venv/
  venv/
  node_modules/
  vendor/
  .terraform.lock.hcl
